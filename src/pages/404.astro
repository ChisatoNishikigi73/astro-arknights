---
import InfoLayout from "../layouts/InfoLayout.astro";

const base = import.meta.env.BASE_URL
---

<InfoLayout title="HTTP Error" tabTitle="404: Page Not Found" subTitle="404: Page Not Found">
    <div class="h-full font-benderBold flex flex-col items-center justify-center">
        <div>
            <div class="border-l-[1rem] border-ark-blue border-solid pl-8">
                <h1 class="text-9xl">HTTP Error</h1>
                <h2 class="text-5xl">404: Page Not Found</h2>
            </div>
            <div class="pt-8 text-3xl font-bold flex items-center justify-around">
                <a target="_self" href={base} class="hover:text-ark-blue">返回首页</a>
                <a onclick="history.back()" class="hover:text-ark-blue">上一页</a>
            </div>
        </div>
    </div>
</InfoLayout>
